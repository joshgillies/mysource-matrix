<contents>
	<section name="Details" write_access="write:attributes">
		<field attribute="name">
			<display_name>Page Name</display_name>
			<note />
			<text width="35" height="1" />
		</field>
		<field attribute="short_name">
			<display_name>Page Short Name</display_name>
			<note />
			<text width="25" height="1" />
		</field>
	</section>
	<section name="Body Keyword Replacement">
		<field>
			<display_name>Body Keyword Replacement</display_name>
			<note></note>
			<function_call>
				<paint_function   name="paintBodycopyInformation"  />
				<process_function name="processBodycopyInformation" />
			</function_call>
		</field>
	</section>
	<section name="Default Format">
		<field>
			<display_name>Edit Default Format</display_name>
			<note></note>
			<function_call>
				<paint_function   name="paintDefaultFormatLink"  />
				<process_function name="processDefaultFormatLink" />
			</function_call>
		</field>
	</section>
	<section name="What's New Settings" write_access="write:attributes">
		<field attribute="date_field">
			<display_name>Date Field</display_name>
			<note>This is the date used to determine if something is "new"</note>
			<selection style="list" />
		</field>
		<field attribute="date_range_from">
			<display_name>Oldest Date</display_name>
			<note>Show assets that are newer than this date</note>
			 <datetime min="1970-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_period="1">
				<show>
					<y style="t" allow_null="1" />
					<m style="s" allow_null="1" />
					<d style="s" allow_null="1" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
					<s style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
		<field attribute="date_range_to">
			<display_name>Newest Date</display_name>
			<note>Show assets that are older than this date</note>
			 <datetime min="1970-01-01 00:00:00" max="2030-12-31 23:59:59" allow_circa="0" allow_period="1">
				<show>
					<y style="t" allow_null="1" />
					<m style="s" allow_null="1" />
					<d style="s" allow_null="1" />
					<h style="s" allow_null="1" />
					<i style="s" allow_null="1" />
					<s style="s" allow_null="1" />
				</show>
			</datetime>
		</field>
	</section>
	<section name="List Settings" write_access="write:content">
		<field>
			<display_name>Root Node</display_name>
			<note>Leave blank to list the sub assets/children of this asset listing page</note>
			<function_call>
				<paint_function   name="paintRootNode"  />
				<process_function name="processRootNode" />
			</function_call>
		</field>
		<field attribute="subs_only">
			<display_name>Subs Only</display_name>
			<note>If set to 'Yes', only the sub assets of the root node will be printed. Otherwise, all assets under the root node will be printed.</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="group_by">
			<display_name>List Format</display_name>
			<note>A standard list displays all assets on a single page or can be broken up into multiple pages.
			&lt;br/&gt;An A-Z listing displays assets grouped by the first letter of their name or short name, as defined by the 'Sort By' field.
			&lt;br/&gt;A Random listing displays one or more assets in random order.</note>
			<selection style="list" />
		</field>
		<field attribute="prev_page_text">
			<display_name>Previous Link</display_name>
			<note>This is the text that will be printed to link to the previous results page</note>
			<text width="30" />
		</field>
		<field attribute="next_page_text">
			<display_name>Next Link</display_name>
			<note>This is the text that will be printed to link to the next results page</note>
			<text width="30" />
		</field>
		<field>
			<display_name>Current Asset Types</display_name>
			<note></note>
			<function_call>
				<paint_function   name="paintCurrentAssetTypes"   />
				<process_function name="processCurrentAssetTypes" />
			</function_call>
		</field>
		<field read_access="write:contents">
			<display_name>Add Asset Type</display_name>
			<note />
			<function_call>
				<paint_function   name="paintAddAssetType"   />
				<process_function name="processAddAssetType" />
			</function_call>
		</field>
	</section>
	<section name="Sorting" write_access="write:attributes">
		<field attribute="sort_by">
			<display_name>Sort By</display_name>
			<note>&lt;b&gt;NOTE:&lt;/b&gt; If using the A-Z listing format, please select only 'Name' or 'Short Name' from the list. Selecting another value for force sorting by 'Name'. This field has no effect in Random listing mode.</note>
			<selection style="list" />
		</field>
		<field attribute="reverse_sort">
			<display_name>Reverse Sort</display_name>
			<note>&lt;b&gt;NOTE:&lt;/b&gt; This option is only valid when using the standard list format.</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="num_per_page">
			<display_name>Assets Per Page</display_name>
			<note>Set to '0' (zero) to list all assets on the same page.&lt;br/&gt;&lt;b&gt;NOTE:&lt;/b&gt; This option is only valid when using the standard list format.
			&lt;br/&gt;If the listing type is Random, this defines how many assets are randomly displayed ('0' displays a single asset).</note>
			<int width="5" />
		</field>
	</section>
</contents>
