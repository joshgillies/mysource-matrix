<contents>
	<section name="Mandatory Create Locations" write_access="write:attributes">
		<field>
			<display_name />
			<note />
			<function_call>
				<paint_function   name="paintCreateLocation"   />
				<process_function name="processCreateLocation" />
			</function_call>
		</field>
	</section>
	<section name="Optional Create Locations" write_access="write:attributes">
		<field>
			<display_name />
			<note />
			<function_call>
				<paint_function   name="paintCreateLocationOptional"   />
				<process_function name="processCreateLocationOptional" />
			</function_call>
		</field>
	</section>
	<section name="Optional Create Locations (Options)" write_access="write:attributes" show_if="definesMultipleLocations">
		<field attribute="create_location_multiple">
			<display_name>Allow Multiple</display_name>
			<note>Selecting 'Yes' here will allow the asset to be created under multiple optional locations (above). Selecting 'No' will restrict the asset to being created under a single optional location.</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="create_location_type">
			<display_name>Selection Type</display_name>
			<note>Select the interface you would like to present for selecting the location to create the asset</note>
			<selection style="list" />
		</field>
	</section>
	<section name="Create Location Rules" write_access="write:attributes">
		<field>
			<display_name />
			<note />
			<function_call>
				<paint_function   name="paintCreateLocationRules"   />
				<process_function name="processCreateLocationRules" />
			</function_call>
		</field>
	</section>
</contents>