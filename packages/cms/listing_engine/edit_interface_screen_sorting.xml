<contents>
	<section name="Sort Defaults" write_access="write:attributes" limbo_access="1">
		<field>
			<function_call>
				<paint_function name="paintDefaultSortDirection" />
				<process_function name="processDefaultSortDirection" />
			</function_call>
		</field>
		<field>
			<function_call>
				<paint_function name="paintDefaultSortByOption" />
				<process_function name="processDefaultSortByOption" />
			</function_call>
		</field>
	</section>
	<section name="Asset Sorting Options" write_access="write:attributes" limbo_access="1">
		<field>
			<function_call>
				<paint_function name="paintSortBy" />
				<process_function name="processSortBy" />
			</function_call>
		</field>
		<field>
			<function_call>
				<paint_function name="paintOrderSortOptions" />
				<process_function name="processOrderSortOptions" />
			</function_call>
		</field>
	</section>
	<section name="Sort Direction Text" write_access="write:attributes" limbo_access="1">
		<field write_access="write:attributes" attribute="sort_direction_asc_text">
			<text width="15" />
		</field>
		<field write_access="write:attributes" attribute="sort_direction_desc_text">
			<text width="15" />
		</field>
	</section>
</contents>
