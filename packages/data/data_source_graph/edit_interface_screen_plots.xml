<contents>
	<section name="Add a new plot" write_access="write:attributes" limbo_access="1">
		<field>
			<function_call>
				<paint_function   name="paintAddPlots"   />
				<process_function name="processAddPlots" />
			</function_call>
		</field>
	</section>
	<section name="Choose a plot" write_access="write:attributes" limbo_access="1" show_if="datasetNotEmpty">
		<field>
			<function_call>
				<paint_function   name="paintChoosePlots"   />
				<process_function name="processChoosePlots" />
			</function_call>
		</field>
	</section>
	<section name="General Plot Settings" write_access="write:attributes" limbo_access="1" show_if="datasetNotEmpty">
		<field>
			<function_call>
				<paint_function   name="paintGeneralPlotSettings"   />
				<process_function name="processGeneralPlotSettings" />
			</function_call>
		</field>
	</section>
	<section name="Plot Specific Settings" write_access="write:attributes" limbo_access="1" show_if="datasetNotEmpty">
		<field>
			<function_call>
				<paint_function   name="paintPlotSpecificSettings"   />
				<process_function name="processPlotSpecificSettings" />
			</function_call>
		</field>
	</section>
	<section name="Marker Settings" write_access="write:attributes" limbo_access="1" show_if="datasetNotEmpty">
		<field>
			<function_call>
				<paint_function   name="paintMarkerSettings"   />
				<process_function name="processMarkerSettings" />
			</function_call>
		</field>
	</section>
	<section name="Single Preview" write_access="write:attributes" limbo_access="1" show_if="datasetNotEmpty">
		<field>
			<function_call>
				<paint_function   name="paintSinglePreview"   />
				<process_function name="processSinglePreview" />
			</function_call>
		</field>
	</section>
	<section name="Final Preview" write_access="write:attributes" limbo_access="1" show_if="moreThanOnePlot">
		<field>
			<function_call>
				<paint_function   name="paintFinalPreview"   />
				<process_function name="processFinalPreview" />
			</function_call>
		</field>
	</section>
</contents>
