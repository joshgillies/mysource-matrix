<contents>
	<section name="Order Details" write_access="write:none">
		<field>
			<display_name>Delivery Method</display_name>
			<note />
			<function_call>
				<paint_function   name="paintDeliveryMethod"   />
			</function_call>
		</field>
		<field>
			<display_name>Processing Status</display_name>
			<note />
			<function_call>
				<paint_function   name="paintOrderStatus"   />
			</function_call>
		</field>
		<field attribute="billing_name">
			<display_name>Billing Name</display_name>
			<note />
		<text width="30" height="1" />
		</field>
		<field attribute="billing_addr">
			<display_name>Billing Address</display_name>
			<note />
		<text width="30" height="8" />
		</field>
		<field attribute="delivery_name">
			<display_name>Delivery Name</display_name>
			<note />
		<text width="30" height="1" />
		</field>
		<field attribute="delivery_addr">
			<display_name>Delivery Address</display_name>
			<note />
		<text width="30" height="8" />
		</field>
		<field>
            <display_name>Transaction Response</display_name>
            <note>The raw response data of transaction.</note>
            <function_call>
                <paint_function name="paintTransactionResponse" />
            </function_call>
        </field>
	</section>
	<section name="Summary" write_access="write:none">
		<field>
			<display_name>Order Receipt</display_name>
			<note>The summary of ecommerce order which includes the details of purchased items and receipt information from delivery</note>
			<function_call>
				<paint_function   name="paintOrderSummary"   />
			</function_call>
		</field>
	</section>
	<section name="Audit Trail" write_access="write:none">
		<field>
			<display_name>Actions</display_name>
			<note>A description of the customer's interaction with this order</note>
			<function_call>
				<paint_function   name="paintOrderHistory"   />
			</function_call>
		</field>
	</section>
	<section name="Ecommerce Reference Number" write_access="write:none">
		<field>
			<display_name>Merchant Transaction ID</display_name>
			<note>The reference number generated by Matrix to pass to the Payment Gateway. If the Payment Gateway is ESEC, this is also the reference number returned by the Payment Gateway.</note>
			<function_call>
				<paint_function   name="paintEcomRefNo"   />
			</function_call>
		</field>
		<field>
			<display_name>Transaction ID</display_name>
			<note>The ID of the trasaction returned by the Payment Gateway.</note>
			<function_call>
				<paint_function name="paintTransactionID" />
			</function_call>
		</field>
	</section>
</contents>