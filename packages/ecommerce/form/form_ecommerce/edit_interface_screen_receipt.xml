<contents>
	<section name="Receipt Options">
		<field attribute="receipt">
			<display_name>Send Receipt</display_name>
			<note>Defines if A Receipt is Sent to the User</note>
			<selection style="list" />
		</field>
		<field attribute="receipt_from_address">
			<display_name>From Address</display_name>
			<note>Address that the receipt is from.</note>
			<text width="20" height="1" />
		</field>
		<field attribute="receipt_subject">
			<display_name>Subject</display_name>
			<note>Subject of the receipt email.</note>
			<text width="20" height="1" />
		</field>
		<field attribute="receipt_body">
			<display_name>Body</display_name>
			<note>The body of the receipt email.</note>
			<text width="40" height="10" />
		</field>
		<field attribute="receipt_allow_html">
			<display_name>Allow HTML</display_name>
			<note>Defines if HTML tags are allowed in the email body.</note>
			<selection style="list" />
		</field>
		<field attribute="receipt_send_answers">
			<display_name>Send Form Answers</display_name>
			<note>Defines if the answers are sent along with the receipt.</note>
			<selection style="list" />
		</field>
	</section>

</contents>