<contents>

	<section name="Details">

		<field write_access="write:attributes" attribute="name">
			<display_name>Name</display_name>
			<note />
			<text width="15" />
		</field>

	</section>

	<section name="Confirmation Button Names" write_access="write:attributes">
		<field attribute="confirm_button_name">
			<display_name>Confirm Button</display_name>
			<note>If you do not supply anything here, "Confirm and proceed to payment" will be used</note>
			<text width="35" height="1" />
		</field>

		<field attribute="cancel_button_name">
			<display_name>Cancel Button</display_name>
			<note>If you do not supply anything here, "Go Back" will be used</note>
			<text width="35" height="1" />
		</field>
	</section>

	<section name="Payment Gateway" write_access="write:attributes">

		<field write_access="write:attributes"  attribute="gateway_assetid">
			<display_name>Linked Gateway</display_name>
			<note>In order for the form to display e-commerce functionality it has to be linked to an e-commerce gateway. Otherwise it will act as a normal custom form.</note>

			<assetid type_codes="payment_gateway:D" />
		</field>

	</section>

</contents>
