<contents>
    <section name="Details" write_access="write:attributes">
        <field attribute="name">
            <display_name>Page Name</display_name>
            <note />
            <text width="35" height="1" />
        </field>
        <field attribute="short_name">
            <display_name>Short Name</display_name>
            <note />
            <text width="35" height="1" />
        </field>
    </section>
    <section name="Identifiers" write_access="write:attributes">
        <field attribute="merchant_id">
            <display_name>Merchant ID</display_name>
            <note />
            <text width="35" height="1" />
        </field>
    </section>
    <section name="Interface Options" write_access="write:attributes">
        <field attribute="display_ccv">
            <display_name>CCV Field</display_name>
            <note>When enabled, this will print the CCV field on the credit card details form.</note>
            <boolean true_text="Yes" false_text="No" />
        </field>
        <field attribute="message">
            <display_name>Message</display_name>
            <note>This message will be displayed on the gateway upon redirect from the e-commerce page.</note>
            <wysiwyg />
        </field>
        <field attribute="submit_text">
            <display_name>Submit Button Text</display_name>
            <text width="35" height="1" />
        </field>
        <field attribute="reset_text">
            <display_name>Reset Button Text</display_name>
            <text width="35" height="1" />
        </field>
        <field attribute="cancel_text">
            <display_name>Cancel Button Text</display_name>
            <text width="35" height="1" />
        </field>
    </section>
</contents>
