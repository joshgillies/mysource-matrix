<schema>
	<tables>
		<table name="suite_product" require_rollback="0">
			<columns>
				<column name="systemid" allow_null="0">
					<type>VARCHAR(150)</type>
					<type_variations />
					<default />
					<description>The id of the system</description>
				</column>
				<column name="type" allow_null="0">
					<type>VARCHAR(50)</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="status" allow_null="1">
					<type>VARCHAR(50)</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="is_current" allow_null="0">
					<type>CHAR(1)</type>
					<type_variations />
					<default>'0'</default>
					<description />
				</column>
				<column name="connection" allow_null="1">
					<type>TEXT</type>
					<type_variations>
						<oci>CLOB</oci>
					</type_variations>
					<default />
					<description>Details of the system</description>
				</column>
				<column name="knows_me_as" allow_null="1">
					<type>VARCHAR(150)</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="sync_status" allow_null="1">
					<type>VARCHAR(5)</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="last_contacted" allow_null="1">
					<type>TIMESTAMP</type>
					<type_variations>
						<oci>DATE</oci>
					</type_variations>
					<default />
					<description />
				</column>
			</columns>
			<keys>
				<primary_key>
					<column name="systemid" />
				</primary_key>
			</keys>
			<indexes>
				<index>
					<column name="type" />
					<column name="status" />
				</index>
			</indexes>
		</table>
	</tables>
	<sequences />
</schema>
