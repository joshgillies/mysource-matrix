<contents>
	<section name="Details" write_access="write:attributes">
		<field attribute="name">
			<display_name>Field Name</display_name>
			<note />
			<text width="30" height="1" />
		</field>
		<field attribute="scheme">
			<display_name>Scheme</display_name>
			<note />
			<text width="30" height="1" />
		</field>
		<field attribute="language">
			<display_name>Language</display_name>
			<note />
			<text width="30" height="1" />
		</field>
	</section>

	<section name="Thesaurus Settings" write_access="write:attributes">
		<field write_access="write:attributes"  attribute="thesaurus_assetid">
			<display_name>Source Thesaurus Asset</display_name>
			<note />
			<assetid type_codes="thesaurus:D" />
		</field>
	</section>

	<section name="Options" write_access="write:attributes">
		<field attribute="editable">
			<display_name>Editable</display_name>
			<note />
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="required">
			<display_name>Required</display_name>
			<note />
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="frontend">
			<display_name>Show On Frontend</display_name>
			<note>&lt;b&gt;Always:&lt;/b&gt; this metadata field will always be printed on the frontend.&lt;br&gt;&lt;b&gt;Only If Filled:&lt;/b&gt; this metadata field will only be printed on the frontend if data is entered in that field for that asset.&lt;br&gt;&lt;b&gt;Never:&lt;/b&gt; this metadata field will not be printed on the frontend.</note>
			<selection style="list" />
		</field>
		<field>
			<display_name>Relevance Weighting</display_name>
			<note />
			<function_call>
				<paint_function		name="paintWeighting" />
				<process_function	name="processWeighting" />
			</function_call>
		</field>
	</section>
	<section name="Thesaurus Settings" write_access="write:attributes">
		<field attribute="allow_manual">
			<display_name>Allow Manual Input</display_name>
			<note>Whether to allow for manual input of this field</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
		<field attribute="force_thesaurus">
			<display_name>Force Thesaurus</display_name>
			<note>If set to true will only accept values from the thesaurus, to be used with "Allow Manual Input"</note>
			<boolean true_text="Yes" false_text="No" />
		</field>
	</section>
</contents>