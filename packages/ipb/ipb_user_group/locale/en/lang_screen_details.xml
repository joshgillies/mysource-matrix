		<field attribute="g_email_friend">
			<display_name>Can email members from the board?</display_name>
			<note></note>
		</field>
		<field attribute="g_edit_profile">
			<display_name>Can edit own profile info?</display_name>
			<note></note>
		</field>
		<field attribute="g_use_pm">
