<requirement_info>
	<package_name>rest</package_name>

	<requirement>
		<!--
		check for SpiderMonkey JS installed on the system
		if it's not available, check for Rhino JS.
		//-->
		<external_program>SpiderMonkey</external_program>
		<description> - This is used by Page REST Resource JS Asset to perform JS operations on the Response Body.</description>
		<version>1.8.0</version>
		<version_arguments>--version</version_arguments>
		<suggested>1</suggested>
		<alternative>
			<external_program>Rhino</external_program>
			<description> - This is used by Page REST Resource JS Asset to perform JS operations on the Response Body.</description>
			<version>1.6</version>
			<version_arguments>--version</version_arguments>
			<suggested>1</suggested>
		</alternative>
	</requirement>

</requirement_info>
