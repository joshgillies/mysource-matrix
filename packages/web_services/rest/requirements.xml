<requirement_info>
	<package_name>rest</package_name>

	<requirement>
		<!--
		check for SpiderMonkey JS
		//-->
		<external_program>js</external_program>
		<description> - This is used by Page REST Resource JS Asset to perform JS operations on the Response Body. Will use SpiderMonkey or Rhino Package.</description>
		<version>1.6.1</version>
		<version_arguments>-v</version_arguments>
		<uses_stderr>1</uses_stderr>
		<expected_return_code>2</expected_return_code>
		<suggested>1</suggested>
		<alternative>
		    <pecl_extension>v8js</pecl_extension>
		    <suggested>1</suggested>
		    <description> - you only need to install this module if Rest Resource JS asset is used and V8 JS engine selected.</description> 
		</alternative>
	</requirement>

</requirement_info>
