<contents>
	<section name="General">
		<field attribute="print">
			<display_name>Print</display_name>
			<note>Select whether this design area should be printed or hidden in this design customisation</note>
		</field>
		<field attribute="cache">
			<display_name>Cache?</display_name>
			<note>Select whether this design area should be cached in this design customisation.  Caching improves performance but can reduce the currency of frontend output.</note>
		</field>
	</section>
	<section name="Link">
		<field>
			<display_name>Linked CSS</display_name>
			<note>The assetid that represents the CSS File</note>
			<function_call>
				<paint_function   name="paintAssetid" />
				<process_function name="processAssetid" />
			</function_call>
		</field>
		<field>
			<display_name>Tag Type</display_name>
			<note>The type of tag to use to link to the CSS file</note>
			<function_call>
				<paint_function name="paintTagType" />
				<process_function name="processTagType" />
			</function_call>
		</field>
		<field>
			<display_name>Media</display_name>
			<note>The media attribute for the CSS link (only used with a LINK tag)</note>
			<function_call>
				<paint_function name="paintMedia" />
				<process_function name="processMedia" />
			</function_call>
		</field>
	</section>
</contents>