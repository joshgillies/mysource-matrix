<contents>
	<section name="Details" write_access="write:attributes">
        <field attribute="name">
            <display_name>Template Name</display_name>
            <note />
            <text width="35" height="1" />
        </field>
        <field>
            <display_name>Allowed Root Nodes</display_name>
            <note>This template will be only available to content containers under this root node.</note>
            <function_call>
                <paint_function   name="paintRootNode"  />
                <process_function name="processRootNode" />
            </function_call>
        </field>
        <field>
            <display_name>Metadata Schemas to Apply</display_name>
            <note>Making changes here will spawn a HIPO job to process Metadata Schemas on every container. This could be an intensive job.</note>
            <function_call>
                <paint_function   name="paintMetadataSchema"  />
                <process_function name="processMetadataSchema" />
            </function_call>
        </field>
        <field>
            <display_name>Paint Layout to Apply</display_name>
            <function_call>
                <paint_function   name="paintPaintLayout"  />
                <process_function name="processPaintLayout" />
            </function_call>
        </field>
        <field>
            <display_name>Simple Edit Layout to Apply</display_name>
            <function_call>
                <paint_function   name="paintSimpleEditLayout"  />
                <process_function name="processSimpleEditLayout" />
            </function_call>
        </field>
        <field attribute="edit_interface_in_admin">
            <display_name>Enable Simple Edit Interface In Admin Mode?</display_name>
            <boolean true_text="Yes" false_text="No"/>
        </field>
	</section>
</contents>
