<asset_info xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<package>__core__</package>
	<type_code>trigger_action_create_image_variety</type_code>
	<version>0.1</version>
	<name>Create Image Variety</name>
	<description>
Create a variation of an existing image asset. &lt;strong&gt;Note:&lt;/strong&gt; Either the width or height attributes can be set to 
zero - this will the aspect ratio of the original image to be maintained.
	</description>
	<instantiable>no</instantiable>
	<allowed_access>system</allowed_access>
	<parent_type>trigger_action</parent_type>
	<requirements>
		<requirement type="asset">
			<code>trigger_manager</code>
			<version>0.4</version>
		</requirement>
		<requirement type="asset">
			<code>trigger_action</code>
			<version>0.1</version>
		</requirement>
		<requirement type="asset">
			<code>image</code>
			<version>0.3</version>
		</requirement>
		<requirement type="asset">
			<code>image_variety</code>
			<version>0.2</version>
		</requirement>
	</requirements>
	<flash_menu_path/>
</asset_info>
