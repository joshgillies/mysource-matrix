<asset_info xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<package>__core__</package>
	<type_code>trigger_condition_tree_location</type_code>
	<version>0.2</version>
	<name>Tree Location</name>
	<description>
		Matches if the asset firing the event resides underneath the selected
		asset in the asset map.&lt;br /&gt;
		Ticking the 'Immediate Children' option restricts the matching only to
		assets directly underneath the selected asset.
	</description>
	<instantiable>no</instantiable>
	<allowed_access>system</allowed_access>
	<parent_type>trigger_condition</parent_type>
	<requirements>
		<requirement type="asset">
			<code>trigger_manager</code>
			<version>0.4</version>
		</requirement>
		<requirement type="asset">
			<code>trigger_condition</code>
			<version>0.2</version>
		</requirement>
	</requirements>
	<flash_menu_path/>
</asset_info>
