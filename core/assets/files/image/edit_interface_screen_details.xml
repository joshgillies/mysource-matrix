<contents>
	<section name="Details" write_access="write:attributes" limbo_access="1">
		<field attribute="title">
			<text width="25" height="1" />
		</field>
		<field>
			<function_call>
				<paint_function   name="paintFilename"   />
				<process_function name="processFilename" />
			</function_call>
		</field>
		<field>
			<function_call>
				<paint_function		name="paintFileUpload" />
				<process_function	name="processFileUpload" />
			</function_call>
		</field>
		<field hidden="hidden" show_if="havePreUploadedFiles">
			<function_call>
				<paint_function   name="paintFileChooser"   />
				<process_function name="processFileChooser" />
			</function_call>
		</field>
		<field hidden="hidden">
			<function_call>
				<paint_function		name="paintCreateEditor" />
				<process_function	name="processCreateEditor" />
			</function_call>
		</field>
		<field attribute="allow_unrestricted">
			<boolean true_text="yes" false_text="no" />
		</field>
		<field attribute="alt">
			<text width="40" height="1" />
		</field>
		<field attribute="caption">
			<text width="60" height="2" />
		</field>
	</section>
</contents>
