	<!-- //        ASSET ATTRIBUTES        // -->


	<query id="insertAssetAttribute">
		<primary>
			<insert>
				<fields table="sq_ast_attr">
					<field>attrid</field>
					<field>type_code</field>
					<field>owning_type_code</field>
					<field>name</field>
					<field>type</field>
					<field>uniq</field>
					<field>parameters_type_code</field>
					<field>default_type_code</field>
					<field>default_val</field>
					<field>parameters_val</field>
					<field>is_admin</field>
					<field>description</field>
				</fields>
				<values>
					<value column="attrid">
						<function function="SeqNextVal">
							<arg><value>sq_ast_attr_seq</value></arg>
						</function>
					</value>
					<value column="type_code">:type_code</value>
					<value column="owning_type_code">:owning_type_code</value>
					<value column="name">:name</value>
					<value column="type">:type</value>
					<value column="uniq">:uniq</value>
					<value column="parameters_type_code">:parameters_type_code</value>
					<value column="default_type_code">:default_type_code</value>
					<value column="default_val">:default_val</value>
					<value column="parameters_val">:parameters_val</value>
					<value column="is_admin">:is_admin</value>
					<value column="description">:description</value>
				</values>
			</insert>
		</primary>
	</query>


	<!-- //		ASSET MANAGER		// -->


	<query id="getTypeDescendants">
		<!-- Select descendants of a certain asset type. -->
		<primary>
			<select>
				<fields>
					<field table="sq_ast_typ_inhd" column="type_code" />
				</fields>
				<from>
					<table>sq_ast_typ_inhd</table>
				</from>
				<where>
					<in table="sq_ast_typ_inhd" column="inhd_type_code">:type_codes</in>
					<not-equal table="sq_ast_typ_inhd" column="inhd_type_code"><field table="sq_ast_typ_inhd" column="type_code"/></not-equal>
				</where>
				<order-by>
					<field table="sq_ast_typ_inhd" column="inhd_type_code" />
					<field table="sq_ast_typ_inhd" column="type_code_lvl" />
				</order-by>
			</select>
		</primary>
		<alternate>
			<assert-true data="include_passed">
				<select>
					<fields>
						<field table="sq_ast_typ_inhd" column="type_code" />
					</fields>
					<from>
						<table>sq_ast_typ_inhd</table>
					</from>
					<where>
						<in table="sq_ast_typ_inhd" column="inhd_type_code">:type_codes</in>
					</where>
					<order-by>
						<field table="sq_ast_typ_inhd" column="inhd_type_code" />
						<field table="sq_ast_typ_inhd" column="type_code_lvl" />
					</order-by>
				</select>
			</assert-true>
		</alternate>
	</query>
	<query id="getTypeCodeWithAllowedAccess">
		<!-- Return the type code with the allowed access provided. -->
		<primary>
			<select>
				<fields>
					<field table="sq_ast_typ" column="type_code" />
				</fields>
				<from>
					<table>sq_ast_typ</table>
				</from>
				<where>
					<equal table="sq_ast_typ" column="allowed_access">:allowed_access</equal>
				</where>
			</select>
		</primary>
	</query>

	<query id="getLinkTreeid">
		<!-- Returns the treeids for linkids passed in.. -->
		<primary>
			<select>
				<fields>
					<field table="sq_ast_lnk_tree" column="linkid" />
					<field table="sq_ast_lnk_tree" column="treeid" />
				</fields>
				<from>
					<table>sq_ast_lnk_tree</table>
				</from>
				<where>
					<in table="sq_ast_lnk_tree" column="linkid">:linkid</in>
				</where>
			</select>
		</primary>
	</query>


	<query id="getTreeIdsByMinorid">
		<!-- Returns the treeids for linkids passed in.. -->
		<primary>
			<select>
				<fields>
					<field table="sq_ast_lnk_tree" column="treeid" />
				</fields>
				<from>
					<table>sq_ast_lnk</table>
					<table>sq_ast_lnk_tree</table>
				</from>
				<joins>
					<join>
						<field table="sq_ast_lnk"      column="linkid" />
						<field table="sq_ast_lnk_tree" column="linkid" />
					</join>
				</joins>
				<where>
					<in table="sq_ast_lnk" column="minorid">:minorid</in>
				</where>
			</select>
			<limit offset="0">1</limit>
		</primary>
	</query>

	<query id="createAsset">
	<!-- Creates a single new asset. -->
		<primary>
			<insert>
				<fields table="sq_ast">
					<field>assetid</field>
					<field>version</field>
					<field>type_code</field>
					<field>name</field>
					<field>short_name</field>
					<field>status</field>
					<field>created</field>
					<field>created_userid</field>
					<field>updated</field>
					<field>updated_userid</field>
					<field>published</field>
					<field>published_userid</field>
					<field>status_changed</field>
					<field>status_changed_userid</field>
				</fields>
				<values>
					<value column="assetid">:assetid</value>
					<value column="version">:version</value>
					<value column="type_code">:type_code</value>
					<value column="name">:name</value>
					<value column="short_name">:short_name</value>
					<value column="status">:status</value>
					<value column="created"><function function="toDate"><arg>:created</arg></function></value>
					<value column="created_userid">:created_userid</value>
					<value column="updated"><function function="toDate"><arg>:updated</arg></function></value>
					<value column="updated_userid">:updated_userid</value>
					<value column="published">:published</value>
					<value column="published_userid">:published_userid</value>
					<value column="status_changed"><function function="toDate"><arg>:status_changed</arg></function></value>
					<value column="status_changed_userid">:status_changed_userid</value>
				</values>
			</insert>
		</primary>
	</query>

	<query id="deletePermissionForUserOnAsset">
		<!-- Deletes permission of a user on an asset -->
		<primary>
			<delete>
				<where>
					<equal table="sq_ast_perm" column="userid">:userid</equal>
					<equal table="sq_ast_perm" column="permission">:permission</equal>
					<equal table="sq_ast_perm" column="assetid">:assetid</equal>
				</where>
			</delete>
		</primary>
	</query>

	<query id="canSafeTrashAsset">
		<primary>
			<select>
				<fields>
					<field table="sq_ast_lnk" column="majorid" />
					<field table="sq_ast_lnk" column="minorid" />
					<field table="sq_ast"     column="name" />
					<field table="sq_ast_lnk" column="linkid" />
					<field table="sq_ast"     column="status" />
					<field table="sq_ast_lnk" column="link_type" />
				</fields>
				<from>
					<table>sq_ast_lnk</table>
					<table>sq_ast</table>
				</from>
				<where>
					<or>
						<in table="sq_ast_lnk" column="link_type">:link_type</in>
						<equal-or-greater table="sq_ast" column="status">:status</equal-or-greater>
					</or>
					<in table="sq_ast" column="assetid">:assetid</in>
				</where>
				<joins>
					<join>
						<field table="sq_ast_lnk" column="minorid" />
						<field table="sq_ast" column="assetid" />
					</join>
				</joins>
			</select>
		</primary>
	</query>

	<query id="setRole">
	<!-- Applies a role to an asset -->
		<primary>
			<insert>
				<fields table="sq_ast_role">
					<field>assetid</field>
					<field>roleid</field>
					<field>userid</field>
				</fields>
				<values>
					<value column="assetid">:assetid</value>
					<value column="roleid">:roleid</value>
					<value column="userid">:userid</value>
				</values>
			</insert>
		</primary>
	</query>

	<query id="getSnippetOrder">
		<primary>
			<select>
				<fields>
					<field table="sq_ast_lnk" column="minorid" />
				</fields>
				<from>
					<table>sq_ast_lnk</table>
				</from>
				<where>
					<in table="sq_ast_lnk" column="minorid">:minorids</in>
					<in table="sq_ast_lnk" column="majorid">:majorids</in>
				</where>
				<group-by>
					<field table="sq_ast_lnk" column="majorid" />
					<field table="sq_ast_lnk" column="sort_order" />
					<field table="sq_ast_lnk" column="minorid" />
				</group-by>
				<order-by>
					<field table="sq_ast_lnk" column="majorid" />
					<field table="sq_ast_lnk" column="sort_order" />
				</order-by>
			</select>
		</primary>
	</query>


	<!-- //		HIPO 	// -->

	<query id="selectJobsForUser">
		<!-- Return the HIPO jobs for specified user -->
		<primary>
