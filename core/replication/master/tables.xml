<schema>
	<tables>
		<table name="replication_remote_slave_system" require_rollback="0">
			<columns>
				<column name="systemid" allow_null="0">
					<type>SMALLINT</type>
					<type_variations>
						<mysql>SMALLINT UNSIGNED</mysql>
					</type_variations>
					<default />
					<description />
				</column>
				<column name="name" allow_null="0">
					<type>VARCHAR(100)</type>
					<type_variations />
					<default>''</default>
					<description>Plain text name for remote slave system</description>
				</column>
				<column name="created" allow_null="0">
					<type>TIMESTAMP</type>
					<type_variations>
						<mysql>DATETIME</mysql>
					</type_variations>
					<default />
					<description />
				</column>
				<column name="retired" allow_null="1">
					<type>TIMESTAMP</type>
					<type_variations>
						<mysql>DATETIME</mysql>
					</type_variations>
					<default>NULL</default>
					<description />
				</column>
			</columns>
			<keys>
				<primary_key>
					<column name="systemid" />
				</primary_key>
				<unique_key>
					<column name="name" />
				</unique_key>
			</keys>
			<indexes />
		</table>
		<table name="replication_remote_slave_asset_versions" require_rollback="0">
			<columns>
				<column name="systemid" allow_null="0">
					<type>SMALLINT</type>
					<type_variations>
						<mysql>SMALLINT UNSIGNED</mysql>
					</type_variations>
					<default />
					<description />
				</column>
				<column name="assetid" allow_null="0">
					<type>VARCHAR(15)</type>
					<type_variations />
					<default />
					<description />
				</column>
				<column name="version" allow_null="0">
					<type>VARCHAR(20)</type>
					<type_variations />
					<default />
					<description />
				</column>
			</columns>
			<keys>
				<primary_key>
					<column name="systemid" />
					<column name="assetid" />
				</primary_key>
			</keys>
			<indexes />
		</table>
	</tables>
	<sequences>
		<sequence name="sequence_replication_slave" />
	</sequences>
</schema>
